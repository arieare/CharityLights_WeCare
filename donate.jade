doctype html
html(lang="en")
  head
    - var pagetitle = "Donate – Amount"
    include ./includes/head.jade
  body
    //Navbar
    include ./includes/navbar.jade
    //Login Modal
    include ./includes/login-modal.jade
    //Signup Modal
    include ./includes/signup-modal.jade
    //CONTENTS
    //Section How it Works
    .jumbotron.donation-step: .container.text-center
      h1.section-title Help Cassie
      .col-md-4.col-sm-4.col-xs-4
        span.step.active 1
        h4 Donate
      .col-md-4.col-sm-4.col-xs-4
        span.step 2
        h4 Payment
      .col-md-4.col-sm-4.col-xs-4
        span.step 3
        h4 Complete
    .jumbotron: .container  
      form
        .col-md-4.col-md-offset-4
          .input-group
            span.input-group-addon#basic-addon1 Donation Amount
            input.form-control(type="text", placeholder="e.g., 5000", aria-describedby="basic-addon1", value="5")
          .checkbox
            label(for="anonymous-donation")
              input(type="checkbox" value="none" id="anonymous-donation")
              | Donate Anonymousy
          br
          button.btn.primary.full-width(type="submit") Next
    //Section Footer
    include ./includes/footer.jade