//Maps API
script(src="https://maps.googleapis.com/maps/api/js")
script(type="text/javascript").
  function mapBG() {
  var mapCanvas = document.getElementById("hospital-map");
  var lat = mapCanvas.getAttribute('data-lat');
  var lng = mapCanvas.getAttribute('data-lng');
  var latlng = new google.maps.LatLng(lat, lng);
  var hospital_name = mapCanvas.getAttribute('data-hospital-name');
  var mapOptions = {
  center: latlng,
  zoom: 15,
  mapTypeId: google.maps.MapTypeId.ROADMAP,
  disableDefaultUI: false
  }
  var map = new google.maps.Map(mapCanvas, mapOptions);
  var marker = new google.maps.Marker({
  position: latlng,
  map: map,
  title: hospital_name})};
  google.maps.event.addDomListener(window, 'load', mapBG);