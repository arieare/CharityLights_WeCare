doctype html
html(lang="id")
  head
    - var pagetitle = "About WeCare ID"
    - var author = "CharityLights"
    include ./includes/head.jade
  body
    //Navbar
    include ./includes/navbar.jade
    //Login Modal
    include ./includes/login-modal.jade
    //Signup Modal
    include ./includes/signup-modal.jade
    //CONTENTS
    //Section Title
    .jumbotron.header-about
      .container.text-center
        h1 Everyone deserves a healthcare
    //Section About CharityLights
    .jumbotron.about
      .container
        .col-md-12
          h2.section-title.text-center About CharityLights
        .col-xs-8.col-sm-6.col-md-5.col-lg-4.col-xs-offset-2.col-sm-offset-3.col-md-offset-0.col-lg-offset-0(style="margin-bottom:1em;")
          picture
            img(alt="charitylights", src="img/cl_tagline_image.png", width="100%", height="auto")
        .col-xs-12.col-sm-12.col-md-7.col-lg-8
          include ./includes/poetry-ipsum.jade
    //Section About WeCare ID
    .jumbotron.about
          .container
            .col-md-12
              h2.section-title.text-center About WeCare ID
            .col-xs-12.col-sm-12.col-md-7.col-lg-8(style="margin-bottom:1em;")
              include ./includes/poetry-ipsum.jade
            .col-xs-12.col-sm-12.col-md-5.col-lg-4
              picture
                img(alt="we care id", src="img/Kids 1.jpg", width="100%", height="auto")
    //Section how it works
    .jumbotron.how-it-works-about
      .container.text-center
        h2.section-title How It Works
        .col-xs-6.col-sm-3.col-md-3
          img(alt="Donate", src="img/ic_donate_about@2x.png", height="113px")
          h3 Donate
        .col-xs-6.col-sm-3.col-md-3
          img(alt="Confirmation", src="img/ic_approve_about@2x.png", height="113px")
          h3 Confirmation
        .col-xs-6.col-sm-3.col-md-3
          img(alt="Get Updated", src="img/ic_update_about@2x.png", height="113px")
          h3 Get Updated
        .col-xs-6.col-sm-3.col-md-3
          img(alt="Done", src="img/ic_finish_about@2x.png", height="113px")
          h3 Done!
